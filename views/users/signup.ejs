<% layout("./layouts/boilerplates.ejs") -%>

<section class="py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <div class="mb-2">
              <span class="rounded-circle bg-primary-subtle text-primary d-inline-flex align-items-center justify-content-center" style="width:3rem;height:3rem;">
                <i class="fa-solid fa-suitcase-rolling"></i>
              </span>
            </div>
            <h2 class="h4 mb-1">Create your TripNest account</h2>
            <p class="text-muted mb-0">Save your favourite stays and share your experiences.</p>
          </div>

          <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                name="username"
                id="username"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                required
              />
            </div>
            <button class="btn btn-primary w-100 mb-3">Sign up</button>
          </form>

          <p class="text-center text-muted mb-0">
            Already have an account?
            <a href="/login" class="text-decoration-none">Log in</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
